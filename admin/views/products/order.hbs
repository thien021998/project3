<div>
  <h1 class="text-center">Đơn hàng</h1>
  <table class="table table-hover mt-5">
    <thead class="thead-dark">
    <tr>
      <th>Tên khách hàng</th>
      <th>Số điện thoại</th>
      <th>Địa chỉ</th>
      <th>Sản phẩm</th>
      <th>Giá</th>
      <th>Trạng thái đơn hàng</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each order}}
    <tr>
      <td>
        {{this.username}}
      </td>
      <td>
        {{this.userPhone}}
      </td>
      <td>
        {{this.address}}
      </td>
      <td>
        {{#each this.products}}{{this.product.name}} - size : {{this.size}} - Số lượng : {{this.quantity}} <br> {{/each}}
      </td>
      <td>
        {{this.totalOrder}} VNĐ
      </td>
      <td>
        <a href=order/{{this._id}}>{{this.completed}}</a>
      </td>
    </tr>
    {{/each}}
    </tbody>
  </table>
</div>